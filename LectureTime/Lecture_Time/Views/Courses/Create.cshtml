@model Lecture_Time.Models.CourseViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2">
        <div class="hidden-xs hidden-sm">
            <img src="~/Content/logo.jpg" class="img-responsive" alt="Responsive image">
        </div>
    </div>
    <div class="col-md-8">
        <h2>Create a new course</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Course.CourseName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Course.CourseName, new { htmlAttributes = new { @class = "form-control" } })
                        @*@Html.TextAreaFor(model => model.Course.CourseName, new { @class = "form-control myTextarea" })*@
                        @Html.ValidationMessageFor(model => model.Course.CourseName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Course.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Course.Content, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.TextAreaFor(model => model.Course.Content, new { @class = "form-control myTextarea" })
                        @Html.ValidationMessageFor(model => model.Course.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Course.AdditionalContent, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Course.AdditionalContent, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.TextAreaFor(model => model.Course.AdditionalContent, new { @class = "form-control myTextarea" })
                        @Html.ValidationMessageFor(model => model.Course.AdditionalContent, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Course.Results, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Course.Results, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.TextAreaFor(model => model.Course.Results, new { @class = "form-control myTextarea" })
                        @Html.ValidationMessageFor(model => model.Course.Results, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        <h4>Choose students from the list below.</h4>
                        <hr />
                        @for (var i = 0; i < Model.StudentsCollection.Count; i++)
                        {
                            @Html.CheckBoxFor(m => m.StudentsCollection[i].Selected)
                            @Html.HiddenFor(m => m.StudentsCollection[i].Text)
                            @Html.HiddenFor(m => m.StudentsCollection[i].Value)
                            <span id="student_checkbox">@Model.StudentsCollection[i].Text</span>
                        }
                        <hr/>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
        @*<hr />
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@
    </div>
</div>
        
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
